<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/homePage"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/navigation_bar"
        tools:ignore="MissingConstraints" />

     <ImageView
         android:id="@+id/navigation_bar_home_hole"
         android:layout_width="128dp"
         android:layout_height="66dp"
         app:layout_constraintStart_toStartOf="@+id/navigation_bar"
         app:layout_constraintTop_toTopOf="@+id/navigation_bar"
         app:srcCompat="@drawable/navigation_bar_hole" />

    <ImageButton
        android:id="@+id/btn_navigation_home_icon"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/home_icon"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/navigation_bar"
        app:layout_constraintStart_toStartOf="@+id/navigation_bar_home_hole"
        app:srcCompat="@drawable/home_icon"
        android:contentDescription="home"/>

    <ImageButton
        android:id="@+id/btn_navigation_home_expenses_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:background="#FDDD5C"
        android:backgroundTint="#FDDD5C"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/navigation_bar"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/expenses_hidden_icon"
        android:contentDescription="expenses"/>

    <ImageButton
        android:id="@+id/btn_navigation_home_cnq_icon"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="320dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/btn_navigation_home_expenses_icon"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/cnq_hidden_icon"
        android:background="#FDDD5C"
        android:backgroundTint="#FDDD5C"
        android:scaleType="fitCenter"
        android:contentDescription="courses and quizzes"/>

    <ImageButton
        android:id="@+id/btn_navigation_home_snn_icon"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="416dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/btn_navigation_home_cnq_icon"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/snn_hidden_icon"
        android:background="#FDDD5C"
        android:backgroundTint="#FDDD5C"
        android:scaleType="fitCenter"
        android:contentDescription="scholarship and news"/>

    <ImageButton
        android:id="@+id/btn_navigation_home_forum_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#FDDD5C"
        android:backgroundTint="#FDDD5C"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/btn_navigation_home_snn_icon"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/forum_hidden_icon"
        android:contentDescription="forum"/>




</androidx.constraintlayout.widget.ConstraintLayout>