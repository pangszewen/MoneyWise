<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".quiz.Fragment_CQ_Home_Page">


    <ImageView
        android:id="@+id/greytop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/course_rectangle_frame_top"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        ></ImageView>

    <TextView
        android:id="@+id/new_courses_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Courses"
        android:textSize="25dp"
        android:fontFamily="@font/donegal_one"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:paddingTop="11dp"
        app:layout_constraintTop_toTopOf="@+id/greytop"
        app:layout_constraintLeft_toLeftOf="@id/greytop">
    </TextView>

    <ImageView
        android:id="@+id/greybottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/course_rectangle_frame_bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/greytop">
    </ImageView>

    <ImageView
        android:id="@+id/orangetop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/course_rectangle_frame_top_orange"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greybottom"></ImageView>

    <TextView
        android:id="@+id/continue_learning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Learning"
        android:textSize="25dp"
        android:textColor="#C28237"
        android:fontFamily="@font/donegal_one"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:paddingTop="11dp"
        app:layout_constraintTop_toTopOf="@+id/orangetop"
        app:layout_constraintLeft_toLeftOf="@id/orangetop">
    </TextView>

    <ImageView
        android:id="@+id/orangebottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/course_rectangle_frame_bottom_orange"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/orangetop"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/greentop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/course_rectangle_frame_top_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orangebottom"></ImageView>

    <TextView
        android:id="@+id/quizes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quizzes"
        android:textSize="25dp"
        android:textColor="#2C6D52"
        android:fontFamily="@font/donegal_one"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:paddingTop="11dp"
        app:layout_constraintTop_toTopOf="@+id/greentop"
        app:layout_constraintLeft_toLeftOf="@+id/greentop">
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/quiz_button_outline"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/greentop"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>