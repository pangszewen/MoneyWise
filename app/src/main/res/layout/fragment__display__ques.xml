<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".quiz.Fragment_Display_Ques">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/quesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/pt_sans"
                android:gravity="center"
                android:text="Question will be displayed here"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <LinearLayout
                android:id="@+id/option1"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/quiz_button_outline"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quesText">

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:background="@drawable/button_ABCD_square"
                    android:fontFamily="@font/pt_sans"
                    android:gravity="center"
                    android:text="A"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="24dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans"
                    android:text="Option 1"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/quiz_button_outline"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/option1">

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:background="@drawable/button_ABCD_square"
                    android:fontFamily="@font/pt_sans"
                    android:gravity="center"
                    android:text="B"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="24dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans"
                    android:text="Option 2"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option3"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/quiz_button_outline"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/option2">

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:background="@drawable/button_ABCD_square"
                    android:fontFamily="@font/pt_sans"
                    android:gravity="center"
                    android:text="C"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="24dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans"
                    android:text="Option 3"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option4"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/quiz_button_outline"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/option3">

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:background="@drawable/button_ABCD_square"
                    android:fontFamily="@font/pt_sans"
                    android:gravity="center"
                    android:text="D"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="24dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans"
                    android:text="Option 4"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"></TextView>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>