<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/grey_circle_corner_box">

    <ImageView
        android:id="@+id/image_quiz_cover"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey"
        android:scaleType="centerCrop"
        android:src="@drawable/course_cover_image" />

    <TextView
        android:id="@+id/text_quiz_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pt_sans_bold"
        android:text="Course Title"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/image_quiz_cover"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_alignBottom="@+id/image_quiz_cover"
        android:layout_toRightOf="@id/image_quiz_cover">
        <TextView
            android:id="@+id/text_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans"
            android:text="Author Name"
            android:textColor="#060047"
            android:textSize="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_marginHorizontal="8dp"
            android:textColor="#060047"
            android:textSize="10dp">
        </TextView>

        <TextView
            android:id="@+id/numOfQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Question(s)"
            android:textColor="#060047"
            android:textSize="10dp">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/numofPeopleTook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 people took this quiz"
        android:textColor="#060047"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/image_quiz_cover"
        android:layout_toRightOf="@id/image_quiz_cover"></TextView>

    <ImageButton
        android:id="@+id/takeQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_play_circle_24"
        android:background="@color/transparent"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_alignBottom="@id/image_quiz_cover"
        android:layout_marginLeft="25dp"></ImageButton>

</RelativeLayout>