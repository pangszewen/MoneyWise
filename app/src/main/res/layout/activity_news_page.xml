<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scholarship.NewsPageActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/linearNewsPage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/rectangle_light_grey">

    <androidx.appcompat.widget.Toolbar
        android:gravity="center_horizontal"
        android:id="@+id/toolbarToolbar"
        android:layout_height="65dp"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp"
        style="@style/rectangle_header_blue_grey">
        <LinearLayout android:id="@+id/header_title"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView android:id="@+id/imageArrowleft"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_marginStart="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_arrowleft"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtNews"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_width="wrap_content"
                android:singleLine="true"
                style="@style/txtDonegalOneregular20_white"
                tools:text="News"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearNewsDetail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStyle_white_rec">

            <ImageView android:id="@+id/imageNews"
                android:layout_height="202dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_image184"/>

            <TextView android:gravity="start"
                android:id="@+id/NewsTitle"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                style="@style/txtPTSansbold26"
                tools:text="India Shelter Finance IPO: 10 must-know points from RHP"/>

            <LinearLayout android:id="@+id/linearAuthorAndDate"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView android:ellipsize="end"
                    android:id="@+id/WrittenBy"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtPTSansregular15_dark_grey"
                    tools:text="Written by: "/>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtAuthorName"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.67"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    style="@style/txtPTSansregular15_dark_grey"
                    tools:text="A. Ksheerasagar"/>

                <TextView android:ellipsize="end"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:id="@+id/txtDate"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtPTSansregular15_dark_grey"
                    tools:text="Dec 13, 2023"/>

            </LinearLayout>

            <View android:background="@color/dark_blue_grey"
                android:id="@+id/lineDivider"
                android:layout_gravity="center_horizontal"
                android:layout_height="2dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="19dp"
                android:layout_width="350dp"/>

            <TextView android:gravity="start"
                android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                style="@style/txtPTSansregular15"
                tools:text="The initial public offering (IPO) of India Shelter Finance Corporation will open for subscription today and remain open until December 15. The company aims to raise ₹800 crore (16,227,181 shares) via the issuance of fresh equity shares, whereas existing shareholders and promoters will offload 8,113,590 shares, aggregating to ₹400 crore. The total size of the IPO is ₹1,200 crore. \n\nThe price band for the offer has been fixed at ₹469–493 per equity share with a face value of ₹05 each. The quota for retail investors in the India Shelter Finance IPO has been fixed at 35% of the net offer. The QIB quota is fixed at 50%, while the quota for NII is reserved at 15%. \n\nThe price band for the offer has been fixed at ₹469–493 per equity share with a face value of ₹05 each. The quota for retail investors in the India Shelter Finance IPO has been fixed at 35% of the net offer. \n\nThe price band for the offer has been fixed at ₹469–493 per equity share with a face value of ₹05 each. The quota for retail investors in the India Shelter Finance IPO has been fixed at 35% of the net offer.\n\nThe price band for the offer has been fixed at ₹469–493 per equity share with a face value of ₹05 each. The quota for retail investors in the India Shelter Finance IPO has been fixed at 35% of the net offer."/>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>