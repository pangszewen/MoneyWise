<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.main_page">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TBCoursePage"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/high_class_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/sideBarButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_density_medium_24"
                android:background="@color/transparent">
            </ImageButton>

            <TextView
                android:id="@+id/quizTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/donegal_one"
                android:text="Courses"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp">
            </TextView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/TBCoursePage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TVContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pt_sans"
            android:text="Continue"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"></TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CLContinueCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/course_rectangle_outline_grey"
            android:foregroundGravity="center_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TVContinue">

            <ImageView
                android:id="@+id/IVCourseImage"
                android:layout_width="130dp"
                android:layout_height="85dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_image_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TVCourseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pt_sans_bold"
                android:paddingRight="10dp"
                android:text="Course Title"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/IVCourseImage"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toRightOf="@+id/IVCourseImage"
                app:layout_constraintTop_toBottomOf="@+id/TVCourseTitle">

                <ImageView
                    android:id="@+id/image_author_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/baseline_account_circle_grey" />

                <TextView
                    android:id="@+id/TVAuthorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@id/image_author_icon"
                    android:fontFamily="@font/pt_sans"
                    android:text="Author Name"
                    android:textSize="12dp" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnSeeAllContinue"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:text="See All"
            android:textSize="10dp"
            android:textColor="#27437B"
            android:fontFamily="@font/pt_sans_bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/quiz_button_outline"
            app:layout_constraintTop_toBottomOf="@+id/CLContinueCourse"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/TVNewCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pt_sans"
            android:text="New Courses"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/BtnSeeAllContinue"
            app:layout_constraintStart_toStartOf="parent"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/TVNewCourse"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"></androidx.recyclerview.widget.RecyclerView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnSeeAllCourse"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:text="See All"
            android:textSize="10dp"
            android:textColor="#27437B"
            android:fontFamily="@font/pt_sans_bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/quiz_button_outline"
            app:layout_constraintTop_toBottomOf="@+id/RVCourse"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/TVQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pt_sans"
            android:text="Quizzes"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/BtnSeeAllCourse"
            app:layout_constraintStart_toStartOf="parent"></TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CLQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/course_rectangle_outline_grey"
            android:foregroundGravity="center_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TVQuiz">

            <ImageView
                android:id="@+id/IVQuizCover"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_image_grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/TVQuizTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_bold"
                android:text="Quiz Title"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:paddingTop="3dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/IVQuizCover"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/TVQuizTitle"
                app:layout_constraintLeft_toRightOf="@+id/IVQuizCover">
                <TextView
                    android:id="@+id/text_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans"
                    android:text="Author Name"
                    android:textColor="#060047"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="#060047"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:id="@+id/numOfQues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Question(s)"
                    android:textColor="#060047"
                    android:textSize="10dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/numofPeopleTook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 people took this quiz"
                android:textColor="#060047"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/linearLayout"
                app:layout_constraintLeft_toRightOf="@id/IVQuizCover"></TextView>

            <ImageButton
                android:id="@+id/takeQuizButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/linearLayout"
                android:background="@color/transparent"
                android:src="@drawable/baseline_play_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.855"></ImageButton>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CLQuiz2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/course_rectangle_outline_grey"
            android:foregroundGravity="center_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CLQuiz">

            <ImageView
                android:id="@+id/IVQuizCover2"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_image_grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/TVQuizTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_bold"
                android:text="Quiz Title"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:paddingTop="3dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/IVQuizCover2"/>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/TVQuizTitle2"
                app:layout_constraintLeft_toRightOf="@+id/IVQuizCover2">
                <TextView
                    android:id="@+id/text_author_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans"
                    android:text="Author Name"
                    android:textColor="#060047"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="#060047"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:id="@+id/numOfQues2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Question(s)"
                    android:textColor="#060047"
                    android:textSize="10dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/numofPeopleTook2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 people took this quiz"
                android:textColor="#060047"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                app:layout_constraintLeft_toRightOf="@id/IVQuizCover2"></TextView>

            <ImageButton
                android:id="@+id/takeQuizButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/linearLayout2"
                android:background="@color/transparent"
                android:src="@drawable/baseline_play_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.855"></ImageButton>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnSeeAllQuiz"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:text="See All"
            android:textSize="10dp"
            android:textColor="#27437B"
            android:fontFamily="@font/pt_sans_bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/quiz_button_outline"
            app:layout_constraintTop_toBottomOf="@id/CLQuiz2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>