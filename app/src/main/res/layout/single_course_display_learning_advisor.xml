<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/course_frame"
        android:layout_width="360dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:background="@color/grey"
        android:src="@drawable/orange_choice_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/course_image"
        android:layout_width="82dp"
        android:layout_height="106dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@+id/course_frame"
        app:layout_constraintTop_toTopOf="@+id/course_frame"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/course_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="Course Title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/course_image"
        app:layout_constraintTop_toTopOf="@+id/course_frame" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/course_image"
        app:layout_constraintTop_toBottomOf="@+id/course_title_text" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/course_frame"
        app:layout_constraintStart_toEndOf="@+id/course_image"
        app:srcCompat="@drawable/baseline_account_blue_grey" />

    <TextView
        android:id="@+id/learning_advisor_name_text"
        android:layout_width="102dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:text="Learning Advisor Name"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/course_frame"
        app:layout_constraintStart_toEndOf="@id/profile_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_bookmark_border_24"
        app:layout_constraintEnd_toEndOf="@+id/course_frame"
        app:layout_constraintTop_toTopOf="@+id/course_frame"></ImageView>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:text="Visible"
        app:layout_constraintBottom_toBottomOf="@+id/course_frame"
        app:layout_constraintEnd_toEndOf="@+id/course_frame" />


</androidx.constraintlayout.widget.ConstraintLayout>